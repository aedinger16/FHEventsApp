<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/distance_small">

    <ImageView
        android:id="@+id/imageViewProfilePicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/distance_small"
        android:src="@drawable/ic_profile"
        android:background="@drawable/circle_background">
    </ImageView>

    <TextView
        android:id="@+id/textViewParticipantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participant Name"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewParticipantCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participant Course"
        android:layout_gravity="center"/>
</LinearLayout>